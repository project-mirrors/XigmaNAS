device		qlxge		# QLogic 8100 10GbE/CNA Adapter
device		qlxgb		# QLogic 3200 and 8200 10GbE/CNA Adapter
device		oce		# Emulex 10Gbe Ethernet
device		sfxge		# Solarflare 10Gb Ethernet Adapters

# InfiniBand support
