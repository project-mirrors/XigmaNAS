	require_once("config.inc");
	require_once("functions.inc");

	if (!isset($_GET["cmd"]) || empty($_GET["cmd"]))
		return -1;
	if (!isset($config['mounts']) || !is_array($config['mounts']))
		return -1;
	if (!isset($config['mounts']['mount']) || !is_array($config['mounts']['mount']))
		return -1;

	// mount/umount HAST volume
	if ($_GET["cmd"] == "start") {
		foreach ($config['mounts']['mount'] as $mount) {
			if ("hvol" !== $mount['type'])
				continue;
			if (!is_booting())
				disks_umount_ex($mount);
			disks_mount($mount);
		}
	} else if ($_GET["cmd"] == "stop") {
		system("/bin/sync");
		foreach ($config['mounts']['mount'] as $mount) {
			if ("hvol" !== $mount['type'])
				continue;
			disks_umount_ex($mount);
		}
	} else if ($_GET["cmd"] == "shutdown") {
		if (!isset($config['vinterfaces']['carp'])
		    || !is_array($config['vinterfaces']['carp']))
			return -1;
		foreach ($config['vinterfaces']['carp'] as $carp) {
			system("/sbin/ifconfig {$carp['if']} state backup");
			sleep(1);
		}
		sleep(3);
	}
	return 0;
?>
